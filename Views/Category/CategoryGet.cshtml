@model ARTICLE.Models.Category

@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Numarası")
    @Html.TextBoxFor(x=>x.CategoryID, new { @class = "form-control"})
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"", new {@style="color:red"})
    <br />
    @Html.Label("Kategori Tanımlaması")
    @Html.TextBoxFor(x=>x.CategoryDescription, new { @class = "form-control"})
    <br />
    <button class="btn btn-warning">Kaydet</button>
}
